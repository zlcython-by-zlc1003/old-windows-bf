{
    "name": "Lucas Tool",
    "description": "build with js and html",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "/images/128.png"
        }
    },
    "options_page": "options.html"
}